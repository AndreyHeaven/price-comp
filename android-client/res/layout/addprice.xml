<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">
    <TextView
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:text="@string/price"
            android:id="@+id/addPriceNameLabel" android:layout_gravity="left|center_vertical" android:layout_row="0"
            android:layout_column="0"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:id="@+id/addPriceDialogPrice" android:numeric="decimal" android:inputType="numberDecimal"
            android:layout_row="1" android:layout_column="1"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/addPriceSelectStore"
            android:id="@+id/buttonChangeStore"
            android:onClick="changeStore"
            android:layout_row="2" android:layout_column="0" android:layout_columnSpan="2"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/newPriceAddButton"
            android:id="@+id/addPriceDialogAddButton"
            android:layout_gravity="center" android:layout_row="2" android:layout_column="0"
            android:layout_marginTop="16dp"/>
</LinearLayout>