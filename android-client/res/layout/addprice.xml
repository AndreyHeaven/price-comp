<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/addPriceNameLabel"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addPriceDialogPrice" android:numeric="decimal" android:inputType="numberDecimal"/>
    <!--<LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:id="@+id/linearLayout1" android:layout_gravity="center"
            android:gravity="center">
        <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/datePicker" android:layout_gravity="center"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=","
                android:id="@+id/textView" android:layout_gravity="center"/>
        <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/datePicker" android:layout_gravity="center"/>
    </LinearLayout>-->
    <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:id="@+id/gridLayout">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="New Text"
                android:id="@+id/textView" android:gravity="center_vertical" android:layout_row="0"
                android:layout_column="0" android:layout_gravity="fill_horizontal|center_vertical"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/buttonChangeStore" android:layout_gravity="center_horizontal"
                android:layout_row="0" android:layout_column="1"/>
    </GridLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:layout_gravity="center">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/newPriceAddButton"
                android:id="@+id/addPriceDialogAddButton"
                android:layout_gravity="center"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/newPriceCancelButton"
                android:id="@+id/addPriceDialogCancelButton"
                android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>