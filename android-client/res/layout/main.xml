<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:padding="5dp">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:id="@+id/linearLayout"
            android:layout_gravity="left|center_vertical">
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/barcodeText" android:layout_gravity="center" android:layout_weight="2.13"
                android:inputType="number" android:lines="1"/>
        <ImageButton
                android:layout_width="72dp"
                android:layout_height="fill_parent"
                android:id="@+id/buttonscan" android:src="@drawable/add_barcode" android:contentDescription=""
                />
    </LinearLayout>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/priceText" android:inputType="number" android:lines="1" android:numeric="decimal"/>
    <ImageButton
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSearch" android:src="@android:drawable/ic_menu_search"
            android:contentDescription="" android:layout_gravity="center"/>
</LinearLayout>

