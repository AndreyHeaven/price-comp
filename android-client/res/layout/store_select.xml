<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:id="@+id/linearLayout">
        <TextView
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:text="@string/ttl"
                android:id="@+id/textView" android:layout_gravity="center" android:layout_marginRight="-2dp"
                android:gravity="right"/>
        <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerTime"/>
    </LinearLayout>

    <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/selectStoreListView"/>

</LinearLayout>